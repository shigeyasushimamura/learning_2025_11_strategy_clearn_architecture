generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// ユーザー
// ========================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  bio       String?
  avatarUrl String?  @map("avatar_url")
  role      UserRole @default(AUTHOR)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  articles Article[]
  comments Comment[]

  @@map("users")
}

enum UserRole {
  AUTHOR
  ADMIN
}

// ========================================
// 記事
// ========================================
model Article {
  id          String        @id @default(uuid())
  title       String
  slug        String        @unique
  content     String
  excerpt     String?
  coverImage  String?       @map("cover_image")
  state       ArticleState  @default(DRAFT)
  publishedAt DateTime?     @map("published_at")
  scheduledAt DateTime?     @map("scheduled_at")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  authorId String @map("author_id")
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  tags     Tag[]
  comments Comment[]
  stateHistories ArticleStateHistory[]

  @@index([state, publishedAt])
  @@index([authorId])
  @@index([slug])
  @@map("articles")
}

enum ArticleState {
  DRAFT
  SCHEDULED
  PUBLISHED
  ARCHIVED
}

// ========================================
// タグ
// ========================================
model Tag {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  articles Article[]

  @@map("tags")
}

// ========================================
// コメント
// ========================================
model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  articleId String  @map("article_id")
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  authorId String @map("author_id")
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([articleId])
  @@index([authorId])
  @@map("comments")
}

// ========================================
// 記事状態履歴
// ========================================
model ArticleStateHistory {
  id        String       @id @default(uuid())
  fromState ArticleState @map("from_state")
  toState   ArticleState @map("to_state")
  event     String
  createdAt DateTime     @default(now()) @map("created_at")

  articleId String  @map("article_id")
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([articleId])
  @@map("article_state_histories")
}